pipeline{
    agent {
        docker { image 'doc-jen'}
    }
    stages{
        stage('Java version'){
            steps{
                sh 'java -version'
                }
            }
        stage('Message'){
            steps{
                echo 'Hello, This is Jenkins pipeline.'
            }
        }
        
        stage('Permission'){
            steps{
                input('Do you want to proceed?')
            }
        }
        
        stage('Test'){
            steps{
                echo 'Testing started'
                }
        }
    }
}
